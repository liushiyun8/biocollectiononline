<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px_6"
    android:paddingLeft="@dimen/px_35"
    android:paddingRight="@dimen/px_35"
    android:paddingTop="@dimen/px_35">

    <TextView
        android:id="@+id/list_tv_user_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/white_gray"
        android:textSize="@dimen/px_22" />

    <TextView
        android:id="@+id/list_tv_user_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px_22" />
</LinearLayout>