<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_250"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginRight="@dimen/px_12"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview_fingerprint_left_show"
            android:layout_width="@dimen/px_125"
            android:layout_height="@dimen/px_134"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_gray_bg" />


        <ImageView
            android:id="@+id/image_user_photo_show"
            android:layout_width="@dimen/px_250"
            android:layout_height="@dimen/px_250"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageview_fingerprint_right_show"
            android:layout_width="@dimen/px_125"
            android:layout_height="@dimen/px_134"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_gray_bg" />


    </RelativeLayout>


    <ListView
        android:id="@+id/listview_userinfo_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginRight="@dimen/px_12"
        android:layout_marginTop="@dimen/px_2"
        android:layout_weight="1"
        android:background="@drawable/gray_bg"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginRight="@dimen/px_12"
        android:layout_marginTop="@dimen/px_17"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginRight="@dimen/px_12"
        android:layout_marginTop="@dimen/px_10"
        android:background="@drawable/gray_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/px_8"
            android:textColor="@color/red_tip_color"
            android:textSize="@dimen/px_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_111"
        android:background="@drawable/bottom_bg">

        <Button
            android:id="@+id/btn_confirm_show_user"
            android:layout_width="@dimen/px_360"
            android:layout_height="@dimen/px_84"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_green_button"
            android:text="@string/btn_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/px_22" />
    </RelativeLayout>

</LinearLayout>








